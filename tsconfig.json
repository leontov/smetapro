{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "vitest",
      "@testing-library/jest-dom"
    ],
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "tsconfig.node.json"
    }
  ]
}